<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>CUSTOM-production-artifacts</actionName>
            <displayName>production-artifacts</displayName>
            <goals>
                <goal>clean</goal>
                <goal>verify</goal>
            </goals>
            <activatedProfiles>
                <activatedProfile>code-coverage</activatedProfile>
                <activatedProfile>site</activatedProfile>
                <activatedProfile>zip-assemblies</activatedProfile>
            </activatedProfiles>
        </action>
        <action>
            <actionName>CUSTOM-production-site-deploy</actionName>
            <displayName>production-site-deploy</displayName>
            <goals>
                <goal>clean</goal>
                <goal>verify</goal>
            </goals>
            <activatedProfiles>
                <activatedProfile>code-coverage</activatedProfile>
                <activatedProfile>site</activatedProfile>
                <activatedProfile>site-deploy</activatedProfile>
            </activatedProfiles>
        </action>
        <action>
            <actionName>CUSTOM-development-site</actionName>
            <displayName>development-site</displayName>
            <goals>
                <goal>clean</goal>
                <goal>verify</goal>
            </goals>
            <activatedProfiles>
                <activatedProfile>site</activatedProfile>
                
                
            </activatedProfiles>
        </action>
        <action>
            <actionName>CUSTOM-development-code-coverage</actionName>
            <displayName>development-code-coverage</displayName>
            <goals>
                <goal>clean</goal>
                <goal>verify</goal>
            </goals>
            <activatedProfiles>
                <activatedProfile>code-coverage</activatedProfile>
                
            </activatedProfiles>
        </action>
        <action>
            <actionName>CUSTOM-development-windows-assembly-unzip</actionName>
            <displayName>development-windows-assembly-unzip</displayName>
            <goals>
                <goal>clean</goal>
                <goal>verify</goal>
            </goals>
            <properties>
                <skipTests>true</skipTests>
            </properties>
            <activatedProfiles>
                <activatedProfile>zip-assemblies</activatedProfile>
                <activatedProfile>windows-jre-unzip</activatedProfile>
                
            </activatedProfiles>
        </action>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.5.0:exec</goal>
            </goals>
            <properties>
                <exec.args>-Dtwitter4j.debug=true -classpath %classpath ${packageClassName}</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.5.0:exec</goal>
            </goals>
            <properties>
                <exec.args>-agentlib:jdwp=transport=dt_socket,server=n,address=${jpda.address} -Dtwitter4j.debug=true -classpath %classpath ${packageClassName}</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.5.0:exec</goal>
            </goals>
            <properties>
                <exec.args>-Dtwitter4j.debug=true -classpath %classpath ${packageClassName}</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
    </actions>
